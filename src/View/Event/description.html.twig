{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/description.css">
{% endblock %}
{% block content %}
	<body>
		<h1 class="title">{{event.name}}</h1>
		<main class="container d-flex vh-100 ">
			<div class="info">
				<h2>Date</h2>
				<p>
					{{event.date}}</p>
				<h2>Adresse</h2>
				<p>
					{{event.address}}</p>
			</div>

			<div class="description ms-5">
				<h2>Description</h2>
				<p>
					{{event.description}}</p>
			</div>
		</main>
	</body>
{% endblock %}
