{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/events.css">
{% endblock %}
{% block content %}
	<main class="container-fluid">
		<div class="eventTitle">
			<h1>Evenements</h1>
		</div>
		<div class="toComeTitle">
			<h2>A Venir</h2>
		</div>
		<div class="row">
			{% for event in events %}
				<div class="col-lg-4 col-md-6 col-sm-12">
					<div class="card border border-secondary future-events">

						<img class="card" src={% if events.image_link is not empty %} "assets/images/{{event.image_link}}" {% else %} "assets/images/{{event.image_link}}" {% endif %} alt="Card image cap">
						<p>
							{{event.description}}
						</p>
						<p>
							{{event.date|date("m/d/Y")}}
						</p>
						<p>
							{{event.address}}
						</p>
						<button class="btn btn-primary fw-bold">Plus d'Info</button>
					</div>
				</div>
			{% endfor %}

		</div>
	</main>
{% endblock %}
