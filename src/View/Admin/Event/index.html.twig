{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminevents.css">
{% endblock %}
{% block header %}{% endblock %}
{% block content %}
	<main class="container">
		<h1 class=" d-flex justify-content-center m-5">Admin Événements</h1>
		<table class="table table-hover">
			<tbody>
				{% for event in events %}
					<tr>
						<th>{{ event.name }}</th>
						<th><button class="btn my-1"><a class="text-decoration-none" href="/admin/evenements/edit?id={{ event.id }}">Modifier</a></button></th>
						<th>
							<form action="/admin/evenements/supprimer" method="POST" onSubmit="return confirm('Etes-vous sûr de vouloir supprimer ce événement ?')">
							<input type="hidden" name="id" value="{{ event.id }}">
							<button class="btn my-1" onSubmit="confirm('Etes-vous sûr de vouloir supprimer ce événement ?')">Supprimer</button>
						</form>
						</th>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
{% block footer %}{% endblock %}