{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/adminmember.css">
{% endblock %}

{% block header %}
{% include 'Includes/_navbar_admin.html.twig' %}
{% endblock %}

{% block content %}
	<main>
		<h1 class="m-5 text-center">Admin membres</h1>
		<div class="row container-fluid d-flex justify-content-center m-auto">
			{% for member in members %}
				<div class="card col-lg-3 m-2 d-flex flex-row justify-content-between">
					<div class="d-flex flex-column justify-content-center col-4 mt-2">
						<p class="fs-5" >{{ member.name }}</p>
						<p class="fs-6">{{ member.status }}</p>
					</div>
					<img class="m-2" src="/assets/images/
							{% if member.photo_link %}
								{{ member.photo_link }}
							{% else %}
								{{ 'portrait-placeholder.png' }}" 
							{% endif %} alt="{{ member.name }}" width="100px" height="100px">
					<div class="d-flex flex-column justify-content-center">
						<a class="text-decoration-none btn my-1" href="/admin/membres/modifier?id={{ member.id }}">Modifier</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}

{% block footer %}{% endblock %}
